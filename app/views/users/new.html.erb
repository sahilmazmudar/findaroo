<%= form_for(@user) do |f| %>

	<%= f.label :name %>
	<%= f.text_field :name %><br/><br/>
	<%= f.label :email %>
	<%= f.email_field :email %>
	<p><%= f.label :budget %> (per month):
	<%= f.number_field :budget %></p>
	<p><%= f.label :lease_duration %> (in months):
	<%= f.number_field :lease_duration %></p>
	<%= f.label :smoking %>
	<%= f.check_box :smoking %>
	<br/>
	<%= f.label :drinking%>
	<%= f.check_box :drinking %>
	<p> <%= f.label :cleanliness %> on a scale of 1 to 5:
	<%= f.number_field :cleanliness %></p>
	<p><%= f.label :quietness %> on a scale of 1 to 5:
	<%= f.number_field :quietness %></p>

  <%= f.submit %>
<% end %>